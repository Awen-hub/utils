{
  "name": "mi-utils",
  "version": "2.5.0",
  "description": "团队工具函数库",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "changelog": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "lint": "yarn format && yarn fix",
    "test": "yarn lint && jest --collect-coverage",
    "doc": "jsdoc -c jsdoc.json",
    "serve": "docsify serve ./docs",
    "md": "jsdoc2md esm/index.js > docs/readme.md",
    "build": "rollup -c  && tsc && yarn doc && yarn md && node scripts/handleDtsFile.js",
    "format": "yarn prettier --write lib/**/*.ts && yarn prettier --write test/**/*.ts && yarn prettier --write *.js",
    "fix": "eslint --fix lib/**/*.ts --no-ignore && eslint --fix test/**/*.ts --no-ignore",
    "release": "semantic-release",
    "patch": "npm version patch"
  },
  "keywords": [
    "函数工具库"
  ],
  "author": "Awen",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.13.15",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-angular": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-preset-env": "^1.7.0",
    "clean-jsdoc-theme": "^3.2.6",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-cmyr-config": "^1.2.3",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "prettier": "2.3.0",
    "rollup": "^2.45.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "compare-func": "^2.0.0"
  },
  "exports": {
    "require": "./cjs/index.js",
    "import": "./esm/index.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "changelog": {
    "language": "zh",
    "settings": {
      "feat": {
        "title": "✨ Features | 新功能",
        "enable": true
      },
      "fix": {
        "title": "🐛 Bug Fixes | Bug 修复",
        "enable": true
      },
      "perf": {
        "title": "⚡ Performance Improvements | 性能优化",
        "enable": true
      },
      "revert": {
        "title": "⏪ Reverts | 回退",
        "enable": true
      },
      "refactor": {
        "title": "♻ Refactor | 代码重构",
        "enable": true
      },
      "docs": {
        "title": "📝 Documentation | 文档",
        "enable": true
      },
      "style": {
        "title": "💄 Styles | 风格",
        "enable": true
      },
      "test": {
        "title": "✅ Tests | 测试",
        "enable": true
      },
      "build": {
        "title": "👷‍ Build System | 构建",
        "enable": true
      },
      "ci": {
        "title": "🔧 Continuous Integration | CI 配置",
        "enable": true
      },
      "chore": {
        "title": "🎫 Chores | 其他更新",
        "enable": true
      }
    }
  }
}
