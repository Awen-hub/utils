{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["esm"],
        "includePattern": ".+\\.js$"
    },
    "opts": {
        "destination": "jsdocs/",
        "recurse": true,
        "template": "./node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "theme": "light"
        }
    }
}